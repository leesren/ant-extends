{
    "include": ["./libs/**/*","./src/**/*"],
    "exclude": ["node_modules","test","__test__/*"],
    "compilerOptions": {
      "target": "es5",
      "outDir": "./dist/npm/es5",
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "allowJs": true,
      "noImplicitAny": false,
      "module": "CommonJS",
      "jsx": "react",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": false,
      "downlevelIteration":true,
      "skipLibCheck":true,
      "declaration": true
    }
  }