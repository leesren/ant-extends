{
  "include": ["./site/**/*","./libs/**/*","./src/**/*"],
  "exclude": ["node_modules","test","__test__/*"],
  "compilerOptions": {
    "target": "es5", 
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": false,
    "module": "UMD",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "downlevelIteration":true,
    "skipLibCheck":true
  }
}